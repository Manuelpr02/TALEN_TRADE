<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Pages.Recordarpasw"
             Title="Recordarpasw">
    <StackLayout Padding="20">
        <Label Text="Ingrese su correo electrónico para recuperar su contraseña" FontSize="20" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        <Entry Placeholder="Correo electrónico" x:Name="CorreoEntry" Margin="0,10,0,0" />
        <Button Text="Enviar Correo" Clicked="Clicked_btnEnviarCorreo" HorizontalOptions="FillAndExpand" BackgroundColor="#333333" TextColor="White" Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>