<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Pages.Menuprincipal"
             Title="Menuprincipal">
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button  Text="VER PERFIL" Grid.Row="0" FontSize="Small" TextColor="White" BackgroundColor="Green" x:Name="btn_verperfil" Clicked="Clicked_btnverperfil" HorizontalOptions="Start" />
        <Button  Text="PUBLICAR"  Grid.Row="0"  FontSize="Small" TextColor="White" BackgroundColor="Green" x:Name="btn_publicar" Clicked="Clicked_btnpublicar" HorizontalOptions="Center" />
        <Button  Text="OFERTAS"  Grid.Row="0"  FontSize="Small" TextColor="White" BackgroundColor="Green" x:Name="btn_verofertas" Clicked="Clicked_btnverofertas" HorizontalOptions="End" />
   
    </Grid>
</ContentPage>